# All my .profile configuration scripts are stored here.
# ASCII Fonts: Rounded

# local npm-global directory
if [ -d "$HOME/.npm-global" ] ; then
    export NPM_CONFIG_PREFIX="$HOME/.npm-global"
    export PATH="$HOME/.npm-global/bin:$PATH"
fi

# Rust configuration
if [ -d "$HOME/.cargo" ] ; then
    export PATH="$HOME/.cargo/bin:$PATH"
fi

# Go configuration
if [ -d "$HOME/.go" ] ; then
   export GOROOT="$HOME/.go"
   export GOPATH="$HOME/.gopkg"
   export PATH="$GOROOT/bin:$PATH"
   export PATH="$GOPATH/bin:$PATH"
fi

# TexLive configuration
if [ -d "$HOME/texlive" ] ; then
    PATH="$HOME/texlive/bin/x86_64-linux:$PATH"; export PATH
    MANPATH="$HOME/texlive/texmf-dist/doc/man:$MANPATH"; export MANPATH
    INFOPATH="$HOME/texlive/texmf-dist/doc/info:$INFOPATH"; export INFOPATH
fi

# MATLAB configuration
if [ -d "$HOME/MATLAB/R2018b" ] ; then
    PATH="$HOME/MATLAB/R2018b/bin:$PATH"; export PATH
fi

